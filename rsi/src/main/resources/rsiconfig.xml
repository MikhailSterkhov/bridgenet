<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration>
    <modules>
        <module name="loggingModule"
                targetClass="me.moonways.bridgenet.rsi.module.logging.LoggingModule"
                configClass="me.moonways.bridgenet.rsi.module.logging.LoggingConfig">

            <!-- Logs pool size limit for logs-module -->
            <property name="poolSize" value="1024"/>
        </module>
        <module name="accessModule"
                targetClass="me.moonways.bridgenet.rsi.module.access.AccessModule"
                configClass="me.moonways.bridgenet.rsi.module.access.AccessConfig">

            <!-- RMI Protocol basically services bind host -->
            <property name="remoteHost" value="127.0.0.1"/>
        </module>
    </modules>
    <services>
        <service>
            <!-- RMI Protocol service bind port -->
            <bindPort>7001</bindPort>
            <!-- Service direction name -->
            <name>bnmg</name>
            <!-- Target service class type -->
            <targetType>me.moonways.service.api.bnmg.BridgenetBnmgService</targetType>
        </service>
        <service>
            <!-- RMI Protocol service bind port -->
            <bindPort>7002</bindPort>
            <!-- Service direction name -->
            <name>bus</name>
            <!-- Target service class type -->
            <targetType>me.moonways.service.api.bus.BridgenetBusService</targetType>
        </service>
        <service>
            <!-- RMI Protocol service bind port -->
            <bindPort>7003</bindPort>
            <!-- Service direction name -->
            <name>entities</name>
            <!-- Target service class type -->
            <targetType>me.moonways.service.api.entities.BridgenetEntitiesService</targetType>
        </service>
        <service>
            <!-- RMI Protocol service bind port -->
            <bindPort>7004</bindPort>
            <!-- Service direction name -->
            <name>friends</name>
            <!-- Target service class type -->
            <targetType>me.moonways.service.api.friends.BridgenetFriendsService</targetType>
        </service>
        <service>
            <!-- RMI Protocol service bind port -->
            <bindPort>7005</bindPort>
            <!-- Service direction name -->
            <name>games</name>
            <!-- Target service class type -->
            <targetType>me.moonways.service.api.games.BridgenetGamesService</targetType>
        </service>
        <service>
            <!-- RMI Protocol service bind port -->
            <bindPort>7006</bindPort>
            <!-- Service direction name -->
            <name>guilds</name>
            <!-- Target service class type -->
            <targetType>me.moonways.service.api.guilds.BridgenetGuildsService</targetType>
        </service>
        <service>
            <!-- RMI Protocol service bind port -->
            <bindPort>7007</bindPort>
            <!-- Service direction name -->
            <name>parties</name>
            <!-- Target service class type -->
            <targetType>me.moonways.service.api.parties.BridgenetPartiesService</targetType>
        </service>
        <service>
            <!-- RMI Protocol service bind port -->
            <bindPort>7008</bindPort>
            <!-- Service direction name -->
            <name>reports</name>
            <!-- Target service class type -->
            <targetType>me.moonways.service.api.reports.BridgenetReportsService</targetType>
        </service>
    </services>
</configuration>
