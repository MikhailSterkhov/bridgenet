<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<configuration>
    <modules>
        <module name="loggingModule"
                targetClass="me.moonways.bridgenet.rsi.module.logging.LoggingRemoteModule"
                configClass="me.moonways.bridgenet.rsi.module.logging.LoggingConfig">

            <!-- Logs pool size limit for logs-module -->
            <property name="poolSize" value="1024"/>
        </module>
        <module name="accessModule"
                targetClass="me.moonways.bridgenet.rsi.module.access.AccessRemoteModule"
                configClass="me.moonways.bridgenet.rsi.module.access.AccessConfig">

            <!-- RMI Protocol basically services bind host -->
            <property name="remoteHost" value="127.0.0.1"/>
        </module>
    </modules>
    <services>
        <service>
            <!-- RMI Protocol service bind port -->
            <bindPort>7001</bindPort>
            <!-- Service direction name -->
            <name>gui</name>
            <!-- Target service class type -->
            <modelPath>me.moonways.model.gui.GuiServiceModel</modelPath>
        </service>
        <service>
            <!-- RMI Protocol service bind port -->
            <bindPort>7002</bindPort>
            <!-- Service direction name -->
            <name>bus</name>
            <!-- Target service class type -->
            <modelPath>me.moonways.model.bus.BusServiceModel</modelPath>
        </service>
        <service>
            <!-- RMI Protocol service bind port -->
            <bindPort>7003</bindPort>
            <!-- Service direction name -->
            <name>players</name>
            <!-- Target service class type -->
            <modelPath>me.moonways.model.players.PlayersServiceModel</modelPath>
        </service>
        <service>
            <!-- RMI Protocol service bind port -->
            <bindPort>7004</bindPort>
            <!-- Service direction name -->
            <name>servers</name>
            <!-- Target service class type -->
            <modelPath>me.moonways.model.servers.ServersServiceModel</modelPath>
        </service>
        <service>
            <!-- RMI Protocol service bind port -->
            <bindPort>7005</bindPort>
            <!-- Service direction name -->
            <name>friends</name>
            <!-- Target service class type -->
            <modelPath>me.moonways.model.friends.FriendsServiceModel</modelPath>
        </service>
        <service>
            <!-- RMI Protocol service bind port -->
            <bindPort>7006</bindPort>
            <!-- Service direction name -->
            <name>games</name>
            <!-- Target service class type -->
            <modelPath>me.moonways.model.games.GamesServiceModel</modelPath>
        </service>
        <service>
            <!-- RMI Protocol service bind port -->
            <bindPort>7007</bindPort>
            <!-- Service direction name -->
            <name>guilds</name>
            <!-- Target service class type -->
            <modelPath>me.moonways.model.guilds.GuildsServiceModel</modelPath>
        </service>
        <service>
            <!-- RMI Protocol service bind port -->
            <bindPort>7008</bindPort>
            <!-- Service direction name -->
            <name>parties</name>
            <!-- Target service class type -->
            <modelPath>me.moonways.model.parties.PartiesServiceModel</modelPath>
        </service>
        <service>
            <!-- RMI Protocol service bind port -->
            <bindPort>7009</bindPort>
            <!-- Service direction name -->
            <name>reports</name>
            <!-- Target service class type -->
            <modelPath>me.moonways.model.reports.ReportsServiceModel</modelPath>
        </service>
    </services>
</configuration>
